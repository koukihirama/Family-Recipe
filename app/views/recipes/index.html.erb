<div class="p-4">
  <h1 class="text-xl font-bold mb-4">レシピ一覧</h1>
  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
    <% @recipes.each do |recipe| %>
      <div class="bg-white rounded-lg shadow p-4">
        <% if recipe.photo.attached? %>
          <%= image_tag recipe.photo.variant(resize_to_limit: [400, 400]), class: "rounded mb-2" %>
        <% end %>
        <h2 class="text-lg font-semibold"><%= link_to recipe.title, recipe_path(recipe), class: "text-purple-600 hover:underline" %></h2>
      </div>
    <% end %>
  </div>
</div>