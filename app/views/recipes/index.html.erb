<h1 class="text-xl font-bold mb-4 text-purple-700">みんなのレシピ</h1>
<div class="grid gap-4 sm:grid-cols-2">
  <% @recipes.each do |recipe| %>
    <div class="bg-white shadow rounded-lg overflow-hidden">
      <%= link_to recipe_path(recipe) do %>
        <%= image_tag recipe.photo.variant(resize_to_limit: [400, 200]), class: "w-full h-40 object-cover" if recipe.photo.attached? %>
        <div class="p-4">
          <h2 class="text-lg font-semibold"><%= recipe.title %></h2>
          <p class="text-sm text-gray-500 truncate"><%= recipe.ingredients %></p>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
