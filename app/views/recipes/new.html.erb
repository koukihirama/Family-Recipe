<h1 class="text-xl font-bold mb-4 text-purple-700">レシピを投稿する</h1>
<%= form_with model: @recipe, local: true, html: { class: "space-y-4" } do |f| %>
  <div>
    <%= f.label :title, "タイトル", class: "block font-medium" %>
    <%= f.text_field :title, class: "w-full border rounded px-3 py-2" %>
  </div>

  <div>
    <%= f.label :ingredients, "材料", class: "block font-medium" %>
    <%= f.text_area :ingredients, rows: 3, class: "w-full border rounded px-3 py-2" %>
  </div>

  <div>
    <%= f.label :instructions, "作り方", class: "block font-medium" %>
    <%= f.text_area :instructions, rows: 5, class: "w-full border rounded px-3 py-2" %>
  </div>

  <div>
    <%= f.label :photo, "写真", class: "block font-medium" %>
    <%= f.file_field :photo, class: "block w-full" %>
  </div>

  <div>
    <%= f.submit "投稿する", class: "w-full bg-purple-600 text-white py-2 rounded hover:bg-purple-700" %>
  </div>
<% end %>
