<div class="p-4 max-w-md mx-auto">
  <h1 class="text-xl font-bold mb-6">レシピを投稿する</h1>
  <%= form_with model: @recipe, local: true do |f| %>
    <div class="mb-4">
      <%= f.label :レシピ名, class: "block font-semibold" %>
      <%= f.text_field :title, class: "w-full p-2 border rounded" %>
    </div>
    <div class="mb-4">
      <%= f.label :材料, class: "block font-semibold" %>
      <%= f.text_area :ingredients, rows: 5, class: "w-full p-2 border rounded" %>
    </div>
    <div class="mb-4">
      <%= f.label :作り方, class: "block font-semibold" %>
      <%= f.text_area :instructions, rows: 8, class: "w-full p-2 border rounded" %>
    </div>
    <div class="mb-6">
      <%= f.label :写真, class: "block font-semibold" %>
      <%= f.file_field :photo, class: "w-full" %>
    </div>
    <%= f.submit "登録する", class: "w-full bg-purple-500 hover:bg-purple-600 text-white py-2 rounded" %>
  <% end %>
</div>