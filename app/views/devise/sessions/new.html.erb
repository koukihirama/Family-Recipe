<div class="min-h-screen flex items-center justify-center bg-yellow-50 px-4">
  <div class="w-full max-w-md bg-white rounded-2xl shadow-lg p-8 space-y-6">

    <h2 class="text-2xl sm:text-3xl font-bold text-purple-700 text-center bg-white/80 px-4 py-2 inline-block rounded shadow">
      🔑 ログイン
    </h2>

    <%= form_with(model: resource, as: resource_name, url: session_path(resource_name), class: "space-y-5", local: true) do |f| %>

      <!-- 📧 メールアドレス -->
      <div>
        <%= f.label :email, "📧 メールアドレス", class: "block text-lg font-semibold mb-1 text-gray-700" %>
        <%= f.email_field :email, autofocus: true, required: true, class: "w-full px-4 py-3 border border-gray-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-purple-400" %>
      </div>

      <!-- 🔒 パスワード -->
      <div>
        <%= f.label :password, "🔒 パスワード", class: "block text-lg font-semibold mb-1 text-gray-700" %>
        <%= f.password_field :password, autocomplete: "current-password", required: true, class: "w-full px-4 py-3 border border-gray-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-purple-400" %>
      </div>

      <!-- ✅ ログインボタン -->
      <div>
        <%= f.submit "ログイン", class: "w-full bg-purple-600 hover:bg-purple-700 text-white font-bold py-3 rounded-xl transition" %>
      </div>
    <% end %>

    <!-- 👋 補助リンク -->
    <div class="text-center text-sm text-gray-600">
      アカウントをお持ちでないですか？<br>
      <%= link_to "▶️ 新規登録はこちら", new_user_registration_path, class: "text-purple-600 hover:underline font-semibold" %>
    </div>
  </div>
</div>
