<div class="min-h-screen flex items-center justify-center bg-gray-50 px-4">
  <div class="w-full max-w-md bg-white rounded-2xl shadow p-6 space-y-6">
    <h2 class="text-2xl font-bold text-center text-gray-800">ログイン</h2>

    <%= form_with(model: resource, as: resource_name, url: session_path(resource_name), class: "space-y-4", local: true) do |f| %>
      <!-- メールアドレス -->
      <div>
        <%= f.label :email, "メールアドレス", class: "block text-sm font-medium text-gray-700" %>
        <%= f.email_field :email, autofocus: true, required: true, class: "mt-1 block w-full px-4 py-2 border border-gray-300 rounded-lg shadow-sm focus:ring-primary-500 focus:border-primary-500" %>
      </div>

      <!-- パスワード -->
      <div>
        <%= f.label :password, "パスワード", class: "block text-sm font-medium text-gray-700" %>
        <%= f.password_field :password, autocomplete: "current-password", required: true, class: "mt-1 block w-full px-4 py-2 border border-gray-300 rounded-lg shadow-sm focus:ring-primary-500 focus:border-primary-500" %>
      </div>

      <!-- ログインボタン -->
      <div>
        <%= f.submit "ログイン", class: "w-full bg-primary-600 hover:bg-primary-700 text-white font-semibold py-2 px-4 rounded-lg shadow-sm transition" %>
      </div>
    <% end %>

    <!-- 補助リンク -->
    <div class="text-center text-sm text-gray-500">
      アカウントをお持ちでないですか？
      <%= link_to "新規登録", new_user_registration_path, class: "text-primary-600 hover:underline font-medium" %>
    </div>
  </div>
</div>