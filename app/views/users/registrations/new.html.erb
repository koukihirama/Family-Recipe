<h2 class="text-xl font-bold mb-4">アカウント作成</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div class="space-y-4">
    <div>
      <%= f.label :email, "メールアドレス" %>
      <%= f.email_field :email, class: "w-full border rounded p-2" %>
    </div>

    <div>
      <%= f.label :password, "パスワード" %>
      <%= f.password_field :password, class: "w-full border rounded p-2" %>
    </div>

    <div>
      <%= f.label :password_confirmation, "確認用パスワード" %>
      <%= f.password_field :password_confirmation, class: "w-full border rounded p-2" %>
    </div>

    <div>
      <%= f.fields_for :family do |ff| %>
        <%= ff.label :name, "家族名" %>
        <%= ff.text_field :name, class: "w-full border rounded p-2" %>
      <% end %>
    </div>

    <div>
      <%= f.submit "登録", class: "w-full bg-purple-600 text-white rounded py-2" %>
    </div>
  </div>
<% end %>
