<h2 class="text-2xl sm:text-3xl font-bold text-purple-700 mb-8 text-center bg-white/80 px-4 py-2 inline-block rounded shadow mx-auto">
  👪 アカウント作成
</h2>

<div class="max-w-md mx-auto bg-yellow-50 p-6 rounded-2xl shadow-lg">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "space-y-6" }) do |f| %>

    <!-- 📧 メールアドレス -->
    <div>
      <%= f.label :email, "📧 メールアドレス", class: "block text-lg font-semibold mb-1 text-gray-700" %>
      <%= f.email_field :email, class: "w-full border border-gray-300 rounded-xl p-3 focus:outline-none focus:ring-2 focus:ring-purple-400" %>
    </div>

    <!-- 🔒 パスワード -->
    <div>
      <%= f.label :password, "🔒 パスワード", class: "block text-lg font-semibold mb-1 text-gray-700" %>
      <%= f.password_field :password, class: "w-full border border-gray-300 rounded-xl p-3 focus:outline-none focus:ring-2 focus:ring-purple-400" %>
    </div>

    <!-- ✅ 確認用パスワード -->
    <div>
      <%= f.label :password_confirmation, "✅ パスワード（確認）", class: "block text-lg font-semibold mb-1 text-gray-700" %>
      <%= f.password_field :password_confirmation, class: "w-full border border-gray-300 rounded-xl p-3 focus:outline-none focus:ring-2 focus:ring-purple-400" %>
    </div>

    <!-- 👨‍👩‍👧‍👦 家族名 -->
    <div>
      <%= f.fields_for :family do |ff| %>
        <%= ff.label :name, "👨‍👩‍👧‍👦 家族名", class: "block text-lg font-semibold mb-1 text-gray-700" %>
        <%= ff.text_field :name, class: "w-full border border-gray-300 rounded-xl p-3 focus:outline-none focus:ring-2 focus:ring-purple-400" %>
      <% end %>
    </div>

    <!-- 🟣 登録ボタン -->
    <div>
      <%= f.submit "登録する", class: "w-full bg-purple-600 hover:bg-purple-700 text-white font-bold rounded-xl py-3 transition" %>
    </div>

  <% end %>
</div>